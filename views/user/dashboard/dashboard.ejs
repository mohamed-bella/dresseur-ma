<%- include('./includes/head.ejs')  %>
<div class="min-h-screen">
    <%- include('./includes/navbar.ejs')  %>
        <!-- Page Content -->
        <div class="p-4 lg:p-8">
         <!-- Quick Stats -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
    <!-- Profile Views -->
    <div class="bg-white border border-gray-200 hover:border-red-600 transition-colors">
        <div class="p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-600">Vues du profil</p>
                    <h3 class="text-2xl font-bold text-gray-900 mt-1">
                        <%= user.stats.visits.total %>
                    </h3>
                    <p class="text-xs text-gray-500 mt-1">
                        <% if (user.stats.visits.growth > 0) { %>
                            <span class="text-green-600">↑ <%= user.stats.visits.growth %>%</span>
                        <% } else { %>
                            <span class="text-red-600">↓ <%= Math.abs(user.stats.visits.growth) %>%</span>
                        <% } %>
                        vs mois précédent
                    </p>
                </div>
                <div class="w-12 h-12 bg-black text-white flex items-center justify-center">
                    <i class="fas fa-eye text-xl"></i>
                </div>
            </div>
            <div class="mt-2 text-xs text-gray-500">
                <%= user.stats.visits.unique %> visiteurs uniques
            </div>
        </div>
    </div>

    <!-- Services -->
    <div class="bg-white border border-gray-200 hover:border-red-600 transition-colors">
        <div class="p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-600">Services</p>
                    <h3 class="text-2xl font-bold text-gray-900 mt-1">
                        <%= user.stats.services.total %>
                    </h3>
                    <p class="text-xs text-gray-500 mt-1">
                        <%= user.stats.services.active %> services actifs
                    </p>
                </div>
                <div class="w-12 h-12 bg-black text-white flex items-center justify-center">
                    <i class="fas fa-briefcase text-xl"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Reviews -->
    <div class="bg-white border border-gray-200 hover:border-red-600 transition-colors">
        <div class="p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-600">Avis</p>
                    <h3 class="text-2xl font-bold text-gray-900 mt-1">
                        <%= user.stats.engagement.totalReviews %>
                    </h3>
                    <p class="text-xs text-gray-500 mt-1">
                        Sur l'ensemble des services
                    </p>
                </div>
                <div class="w-12 h-12 bg-black text-white flex items-center justify-center">
                    <i class="fas fa-star text-xl"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Rating -->
    <div class="bg-white border border-gray-200 hover:border-red-600 transition-colors">
        <div class="p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-600">Note moyenne</p>
                    <h3 class="text-2xl font-bold text-gray-900 mt-1">
                        <%= user.stats.engagement.averageRating %>
                    </h3>
                    <% if (user.stats.engagement.totalReviews > 0) { %>
                        <p class="text-xs text-gray-500 mt-1">
                            Basé sur <%= user.stats.engagement.totalReviews %> avis
                        </p>
                    <% } %>
                </div>
                <div class="w-12 h-12 bg-black text-white flex items-center justify-center">
                    <i class="fas fa-award text-xl"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Links Section -->
<div class="mt-8">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Accès rapide</h2>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <!-- Profile Link -->
        <a href="/dashboard/profile" class="block group">
            <div class="p-4 bg-white border border-gray-200 hover:border-red-600 transition-all">
                <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                        <div class="w-10 h-10 bg-black text-white flex items-center justify-center">
                            <i class="fas fa-user text-lg"></i>
                        </div>
                        <div>
                            <h3 class="font-medium text-gray-900">Mon Profile</h3>
                            <p class="text-sm text-gray-500">Gérer mon profil</p>
                        </div>
                    </div>
                    <i class="fas fa-chevron-right text-gray-400 group-hover:text-red-600 transition-colors"></i>
                </div>
            </div>
        </a>

        <!-- Statistics Link -->
        <a href="/dashboard/stats" class="block group">
            <div class="p-4 bg-white border border-gray-200 hover:border-red-600 transition-all">
                <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                        <div class="w-10 h-10 bg-black text-white flex items-center justify-center">
                            <i class="fas fa-chart-bar text-lg"></i>
                        </div>
                        <div>
                            <h3 class="font-medium text-gray-900">Les Statistiques</h3>
                            <p class="text-sm text-gray-500">Voir mes performances</p>
                        </div>
                    </div>
                    <i class="fas fa-chevron-right text-gray-400 group-hover:text-red-600 transition-colors"></i>
                </div>
            </div>
        </a>

        <!-- Reviews Link -->
        <a href="/dashboard/reviews" class="block group">
            <div class="p-4 bg-white border border-gray-200 hover:border-red-600 transition-all">
                <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                        <div class="w-10 h-10 bg-black text-white flex items-center justify-center">
                            <i class="fas fa-star text-lg"></i>
                        </div>
                        <div>
                            <h3 class="font-medium text-gray-900">Les Avis</h3>
                            <p class="text-sm text-gray-500">Gérer les avis clients</p>
                        </div>
                    </div>
                    <i class="fas fa-chevron-right text-gray-400 group-hover:text-red-600 transition-colors"></i>
                </div>
            </div>
        </a>

        <!-- Homepage Link -->
        <a href="/" class="block group">
            <div class="p-4 bg-white border border-gray-200 hover:border-red-600 transition-all">
                <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                        <div class="w-10 h-10 bg-black text-white flex items-center justify-center">
                            <i class="fas fa-home text-lg"></i>
                        </div>
                        <div>
                            <h3 class="font-medium text-gray-900">Page d'Accueil</h3>
                            <p class="text-sm text-gray-500">Retour à l'accueil</p>
                        </div>
                    </div>
                    <i class="fas fa-chevron-right text-gray-400 group-hover:text-red-600 transition-colors"></i>
                </div>
            </div>
        </a>
    </div>
</div>

            
        </div>
    </main>
</div>

</body>
</html>