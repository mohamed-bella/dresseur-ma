    <!-- Form Content -->
    <form id="basicInfoForm">
        <!-- Main Info Grid -->
        <div class="border-t border-gray-200">
            <div class="grid grid-cols-1 md:grid-cols-2 divide-y md:divide-y-0 md:divide-x divide-gray-200">
                <!-- Personal Info Section -->
                <div class="p-6 space-y-4">
                    <!-- Name -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Nom complet <span class="text-red-600">*</span>
                        </label>
                        <input type="text" 
                               name="displayName" 
                               value="<%= user.displayName %>"
                               required
                               class="w-full h-10 px-3 border border-gray-300 focus:border-red-600 focus:outline-none">
                    </div>

                    <!-- Email -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Email <span class="text-gray-400">(Non modifiable)</span>
                        </label>
                        <input type="email" 
                               value="<%= user.email %>"
                               disabled
                               class="w-full h-10 px-3 border border-gray-200 bg-gray-50 text-gray-600">
                    </div>
                </div>

                <!-- Contact Info Section -->
                <div class="p-6 space-y-4">
                    <!-- Phone -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Téléphone <span class="text-red-600">*</span>
                        </label>
                        <input type="tel" 
                               name="phone" 
                               value="<%= user.phoneNumber || '' %>"
                               required
                               class="w-full h-10 px-3 border border-gray-300 focus:border-red-600 focus:outline-none">
                    </div>

                    <!-- Location -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Ville <span class="text-red-600">*</span>
                        </label>
