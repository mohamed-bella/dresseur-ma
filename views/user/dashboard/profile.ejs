                            <select name="location" 
                                    id="locationSelect"
                                    required
                                    class="w-full h-10 px-3 border border-gray-300 focus:border-red-600 focus:outline-none appearance-none">
                                <option value="">Sélectionnez une ville</option>
                                <% cities.forEach(city => { %>
                                    <option value="<%= city.id %>" 
                                            <%= user.location?.city === city.id ? 'selected' : '' %>>
                                        <%= city.name %>
                                    </option>
                                <% }); %>
                            </select>
